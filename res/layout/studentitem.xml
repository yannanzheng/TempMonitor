<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    
   <ImageView 
       android:id="@+id/student_photo_iv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:src="@drawable/ic_launcher"
       /> 
  
   
   
   <TextView  
     android:id="@+id/student_number_tip_tv"  
     android:layout_width="wrap_content"  
     android:layout_height="wrap_content"  
     android:text="学号:" 
     android:textColor="#000000"
     android:layout_toRightOf="@id/student_photo_iv"
     android:layout_marginLeft="5dp"
   />  
   <TextView  
     android:id="@+id/student_number_tv"  
     android:layout_width="fill_parent"  
     android:layout_height="wrap_content"  
     android:layout_toRightOf="@id/student_number_tip_tv"
     android:layout_alignBaseline="@id/student_number_tip_tv"
     android:text="001001" 
     android:textColor="#000000"
     /> 
     
   
     <TextView  
     android:id="@+id/student_name_tip_tv"  
     android:layout_width="wrap_content"  
     android:layout_height="wrap_content"  
     android:text="姓名：" 
     android:textColor="#000000"
     android:layout_toRightOf="@id/student_photo_iv"
     android:layout_below="@id/student_number_tip_tv"
     android:layout_marginLeft="5dp"
   />  
   
   
  <TextView  
     android:id="@+id/student_name_tv"  
     android:layout_width="wrap_content"  
     android:layout_height="wrap_content"  
     android:layout_toRightOf="@id/student_name_tip_tv"
     android:layout_alignBaseline="@id/student_name_tip_tv"
     android:text="zhangsan" 
     android:textColor="#000000"
     /> 
     
  <TextView  
     android:id="@+id/student_temper_tip_tv"  
     android:layout_width="wrap_content"  
     android:layout_height="wrap_content" 
     android:layout_toLeftOf="@+id/student_temper_tv" 
     
     android:text="体温："  
     android:textColor="#000000"
     
     />

  <TextView
      android:id="@+id/student_temper_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_marginRight="5dp"
      android:layout_marginLeft="3dp"
      android:textColor="#000000"
      android:text="36.5℃" />

</RelativeLayout>
